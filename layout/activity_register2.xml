<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/edit_text"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Basic Medical Information"
                android:textColor="#0066FF"
                android:textSize="25sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/sexText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sex*"
                android:textColor="#0066FF"
                android:textSize="19sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:backgroundTint="@color/blue"
                android:drawablePadding="8dp"
                android:hint="M / F"
                android:textColor="@color/grey"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/heightText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Height (cm)*"
                android:textColor="#0066FF"
                android:textSize="19sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:backgroundTint="@color/blue"
                android:drawablePadding="8dp"
                android:hint="175"
                android:textColor="@color/grey"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/weightText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Weight (kg)*"
                android:textColor="#0066FF"
                android:textSize="19sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:backgroundTint="@color/blue"
                android:drawablePadding="8dp"
                android:hint="69.2"
                android:textColor="@color/grey"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/issuesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Current Health Issues"
                android:textColor="#0066FF"
                android:textSize="19sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/issues"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:backgroundTint="@color/blue"
                android:drawablePadding="8dp"
                android:hint="Allergies, Disorders etc."
                android:inputType="textMultiLine"
                android:textColor="@color/grey"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/medicationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Current Medication"
                android:textColor="#0066FF"
                android:textSize="19sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/medication"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:backgroundTint="@color/blue"
                android:drawablePadding="8dp"
                android:hint="Name -> Disease"
                android:inputType="textMultiLine"
                android:textColor="@color/grey"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/historyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Medical History"
                android:textColor="#0066FF"
                android:textSize="19sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/medicalhistory"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:backgroundTint="@color/blue"
                android:drawablePadding="8dp"
                android:hint="Past Health Issue Diagnoses"
                android:inputType="textMultiLine"
                android:textColor="@color/grey"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Clicking 'Register', I understand that my medical information will be available online."
                android:textColor="@color/grey"
                android:textSize="10sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/regBtn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/blue"
                android:text="Register"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="normal|bold"
                android:translationX="170dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>