<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoutBtn"
            android:layout_width="26dp"
            android:layout_height="27dp"
            android:src="@drawable/logout"
            android:translationX="360dp"
            android:translationY="25dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="102dp"
        android:layout_height="86dp"
        android:src="@drawable/user"
        android:translationX="55dp"
        android:translationY="30dp" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="184dp"
        android:layout_height="46dp"
        android:text="TextView"
        android:textColor="@color/blue"
        android:textSize="28dp"
        android:textStyle="bold"
        android:translationX="160dp"
        android:translationY="38dp"
        tools:text="Saurav Hazra" />

    <TextView
        android:id="@+id/profileUsername"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:translationX="162dp"
        android:translationY="75dp"
        tools:text="saurav_hzra" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/medicalBtn"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:background="@drawable/offline_btn"
        android:text="Medical Info."
        android:textAllCaps="false"
        android:textColor="@color/grey"
        android:textSize="17sp"
        android:textStyle="normal"
        android:translationX="198dp"
        android:translationY="135dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/personalBtn"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:text="Personal"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:textStyle="normal"
        android:translationX="55dp"
        android:translationY="135dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="598dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:translationY="190dp">

        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Name*"
            android:textColor="#0066FF"
            android:textSize="19sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/blue"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:hint="Enter your Full Name"
            android:textColor="@color/grey"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/dobText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Date of Birth*"
            android:textColor="#0066FF"
            android:textSize="19sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/editDob"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/blue"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:hint="MM / DD / YYYY"
            android:inputType="date"
            android:textColor="@color/grey"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Email*"
            android:textColor="#0066FF"
            android:textSize="19sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/blue"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="8dp"
            android:hint="xxxx@gmail.com"
            android:inputType="textEmailAddress"
            android:textColor="@color/grey"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/usernameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Username"
            android:textColor="#0066FF"
            android:textSize="19sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/blue"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:hint="Create a username"
            android:textColor="@color/grey"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/passwordText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Password*"
            android:textColor="#0066FF"
            android:textSize="19sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/blue"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="8dp"
            android:hint="**********"
            android:inputType="textPassword"
            android:textColor="@color/grey"
            android:textSize="19sp" />

        <Button
            android:id="@+id/updatePersonalBtn"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/blue"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="normal|bold"
            android:translationX="255dp"
            android:translationY="-7dp" />

    </LinearLayout>

</FrameLayout>