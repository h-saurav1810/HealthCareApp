<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoutBtn"
            android:layout_width="26dp"
            android:layout_height="27dp"
            android:src="@drawable/logout"
            android:translationX="360dp"
            android:translationY="25dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="102dp"
        android:layout_height="86dp"
        android:src="@drawable/user"
        android:translationX="55dp"
        android:translationY="30dp" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="184dp"
        android:layout_height="48dp"
        android:text="TextView"
        android:textColor="@color/blue"
        android:textSize="28dp"
        android:textStyle="bold"
        android:translationX="160dp"
        android:translationY="38dp"
        tools:text="Saurav Hazra" />

    <TextView
        android:id="@+id/profileUsername"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:translationX="162dp"
        android:translationY="75dp"
        tools:text="saurav_hzra" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/medicalBtn"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:text="Medical Info."
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:textStyle="normal"
        android:translationX="198dp"
        android:translationY="135dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/personalBtn"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:text="Personal"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:textStyle="normal"
        android:translationX="55dp"
        android:translationY="135dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="679dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:translationY="180dp">

        <TextView
            android:id="@+id/sexText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Sex*"
            android:textColor="#0066FF"
            android:textSize="19sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/editSex"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/blue"
            android:drawablePadding="8dp"
            android:hint="M / F"
            android:textColor="@color/grey"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/heightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Height (cm)*"
            android:textColor="#0066FF"
            android:textSize="19sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/editHeight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/blue"
            android:drawablePadding="8dp"
            android:hint="175"
            android:textColor="@color/grey"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/weightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Weight (kg)*"
            android:textColor="#0066FF"
            android:textSize="19sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/editWeight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/blue"
            android:drawablePadding="8dp"
            android:hint="69.2"
            android:textColor="@color/grey"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/issuesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Health Issues"
            android:textColor="#0066FF"
            android:textSize="19sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/editIssues"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:backgroundTint="@color/blue"
            android:drawablePadding="8dp"
            android:hint="Allergies, Disorders etc."
            android:inputType="textMultiLine"
            android:textColor="@color/grey"
            android:textSize="19sp"
            android:translationY="-5dp" />

        <TextView
            android:id="@+id/medicationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Current Medication"
            android:textColor="#0066FF"
            android:textSize="19sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/editMedication"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:backgroundTint="@color/blue"
            android:drawablePadding="8dp"
            android:hint="Name -> Disease"
            android:inputType="textMultiLine"
            android:textColor="@color/grey"
            android:textSize="19sp"
            android:translationY="-5dp" />

        <Button
            android:id="@+id/updateMedicalBtn"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/blue"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="normal|bold"
            android:translationX="255dp"
            android:translationY="-12dp" />

    </LinearLayout>

</FrameLayout>