<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:overScrollMode="ifContentScrolls"
    tools:context=".StatsFragment">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp"
        android:textColor="@color/blue"
        android:textSize="25sp"
        android:translationX="110dp"
        android:translationY="20dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/heartbutton"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:background="@drawable/offline_btn"
        android:text="Heart Rate"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        android:textSize="17sp"
        android:textStyle="normal"
        android:translationX="4dp"
        android:translationY="35dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tempbutton"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:text="Body Temp."
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:textStyle="normal"
        android:translationX="118dp"
        android:translationY="-13dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/glucosebutton"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:background="@drawable/offline_btn"
        android:text="Glucose"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        android:textSize="17sp"
        android:textStyle="normal"
        android:translationX="233dp"
        android:translationY="-60dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/o2button"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:background="@drawable/offline_btn"
        android:text="O2"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        android:textSize="17sp"
        android:textStyle="normal"
        android:translationX="335dp"
        android:translationY="-108dp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/tempPlot"
        android:layout_width="377dp"
        android:layout_height="327dp"
        android:translationX="17dp"
        android:translationY="-86dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_margin="30dp"
        android:translationY="-102dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text"
            android:orientation="vertical"
            android:padding="24dp" />

        <TextView
            android:id="@+id/minTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--------"
            android:textColor="@color/blue"
            android:textSize="26sp"
            android:translationX="21dp"
            android:translationY="13dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ⁰C"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:translationX="90dp"
            android:translationY="28dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:translationX="21dp"
            android:translationY="48dp" />

        <TextView
            android:id="@+id/avgTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--------"
            android:textColor="@color/blue"
            android:textSize="26sp"
            android:translationX="140dp"
            android:translationY="13dp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ⁰C"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:translationX="211dp"
            android:translationY="28dp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:translationX="145dp"
            android:translationY="48dp" />

        <TextView
            android:id="@+id/maxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--------"
            android:textColor="@color/blue"
            android:textSize="26sp"
            android:translationX="252dp"
            android:translationY="13dp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ⁰C"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:translationX="319dp"
            android:translationY="28dp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:translationX="252dp"
            android:translationY="48dp" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/email_usernameText"
        android:layout_width="348dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:text=" Last Monitored"
        android:textColor="#0066FF"
        android:textSize="19sp"
        android:textStyle="normal"
        android:translationX="25dp"
        android:translationY="-142dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_margin="30dp"
        android:translationY="-181dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text"
            android:orientation="horizontal"
            android:padding="24dp" />


        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" ⁰C"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:translationX="211dp"
            android:translationY="27dp" />

        <TextView
            android:id="@+id/lastTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--------"
            android:textColor="@color/blue"
            android:textSize="26sp"
            android:translationX="140dp"
            android:translationY="12dp" />


    </androidx.cardview.widget.CardView>

</LinearLayout>