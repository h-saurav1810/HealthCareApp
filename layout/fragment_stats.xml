<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StatsFragment">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/heart"
        android:textColor="@color/blue"
        android:textSize="25sp"
        android:translationX="144dp"
        android:translationY="20dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/heartbutton"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:text="Heart Rate"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:textStyle="normal"
        android:translationX="4dp"
        android:translationY="35dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tempbutton"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:text="Body Temp."
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:textStyle="normal"
        android:translationX="118dp"
        android:translationY="-13dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/glucosebutton"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:text="Glucose"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:textStyle="normal"
        android:translationX="233dp"
        android:translationY="-60dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/o2button"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:text="O2"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:textStyle="normal"
        android:translationX="335dp"
        android:translationY="-108dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/weekbutton"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Weekly"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:textStyle="normal"
        android:translationX="69dp"
        android:translationY="-89dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/monthbutton"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Monthly"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:textStyle="normal"
        android:translationX="219dp"
        android:translationY="-137dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_margin="30dp"
        android:translationY="140dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text"
            android:orientation="vertical"
            android:padding="24dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65"
            android:textColor="@color/blue"
            android:textSize="32sp"
            android:translationX="30dp"
            android:translationY="10dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BPM"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:translationX="72dp"
            android:translationY="30dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:translationX="21dp"
            android:translationY="50dp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70"
            android:textColor="@color/blue"
            android:textSize="32sp"
            android:translationX="150dp"
            android:translationY="10dp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BPM"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:translationX="193dp"
            android:translationY="30dp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:translationX="145dp"
            android:translationY="50dp" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78"
            android:textColor="@color/blue"
            android:textSize="32sp"
            android:translationX="270dp"
            android:translationY="10dp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BPM"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:translationX="313dp"
            android:translationY="30dp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:translationX="258dp"
            android:translationY="50dp" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/email_usernameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text=" Last Monitored"
        android:textColor="#0066FF"
        android:textSize="19sp"
        android:textStyle="normal"
        android:translationX="25dp"
        android:translationY="100dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:translationY="80dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text"
            android:orientation="horizontal"
            android:padding="24dp" />


        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BPM"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:translationX="195dp"
            android:translationY="27dp" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="70"
            android:textColor="@color/blue"
            android:textSize="32sp"
            android:translationX="152dp"
            android:translationY="8dp" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="15 / 05 / 2023"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:translationX="25dp"
            android:translationY="22dp" />


    </androidx.cardview.widget.CardView>

</LinearLayout>